<Window
    x:Class="PickImages.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PickImages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="根据长图找原图v1.0.0"
    Width="820"
    Height="450"
    Margin="0"
    FontFamily="Consolas"
    FontSize="14"
    x:Name="dundun"
    mc:Ignorable="d">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="600" />
            <ColumnDefinition Width="200" />

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="220" />
        </Grid.RowDefinitions>

        <!--  显示选择的文件路径  -->



        <!--  浏览文件按钮  -->
        <Button
            x:Name="OCRButton1"
            Grid.Column="1"
            Width="190"
            Height="40"
            Margin="5"
            HorizontalAlignment="Left"
            Click="OCRButton1_Click"
            Content="选择文件并找原图" />

        <Button
            x:Name="DetectCSButton"
            Grid.Row="1"
            Grid.Column="1"
            Width="190"
            Height="40"
            Margin="5"
            HorizontalAlignment="Left"
            Click="DetectCSButton_Click"
            Content="选择文件夹并找原图" />
        <Button
            x:Name="DetectZXButton"
            Grid.Row="2"
            Grid.Column="1"
            Width="190"
            Height="40"
            Margin="5"
            HorizontalAlignment="Left"
            Click="DetectZXButton_Click"
            Content="选择文件夹并找原图" />
        <TextBox
            x:Name="OCRFile1"
            Width="Auto"
            Height="20"
            Margin="10"
            IsReadOnly="True"
            Text="======选择站点名_日期XXX.csv=====" />

        <TextBox
            x:Name="DetectCSFolder"
            Grid.Row="1"
            Width="Auto"
            Height="20"
            Margin="10"
            IsReadOnly="True"
            Text="======选择车身误检测文件夹=====" />
        <TextBox
            x:Name="DetectZXFolder"
            Grid.Row="2"
            Width="Auto"
            Height="20"
            Margin="10"
            IsReadOnly="True"
            Text="======选择走行误检测文件夹======" />
        <TextBox
            x:Name="myConsole"
            Grid.Row="4"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Width="750"
            Height="190"
            Margin="5"
            AcceptsReturn="True"
            AcceptsTab="True"
            Background="White"
            FontFamily="Consolas"
            FontSize="13"
            Foreground="Black"
            HorizontalScrollBarVisibility="Auto"
            IsReadOnly="True"
            TextWrapping="NoWrap"
            VerticalScrollBarVisibility="Auto" />

        <StackPanel Grid.Row="3" Orientation="Horizontal" DataContext="{Binding ElementName=dundun}">
            <ComboBox
                x:Name="DatetimeComboBox"
                ItemsSource="{Binding DateList}"
                ItemStringFormat="yyyy-MM-dd"
                SelectedIndex="1"
                Width="110"
                Height="25"
                SelectionChanged="DatetimeChanged" Margin="5"/>
            <Button
                x:Name="GatherWarningButton"
                Width="200"
                Height="40"
                Margin="5"
                HorizontalAlignment="Left"
                Click="GatherWarningClick"
                Content="汇总Warning原图并上传" />
            <Button
                x:Name="PickWarningButton"
                Width="250"
                Height="40"
                Margin="5"
                HorizontalAlignment="Left"
                Click="PickWarningButton_OnClick"
                Content="误检测长图分类" 
                IsEnabled="True"
                Visibility="Hidden"/>
        </StackPanel>
        <Button
            x:Name="FtpButton"
            Grid.Column="1"
            Grid.Row="3"
            Width="190"
            Height="40"
            Margin="5"
            HorizontalAlignment="Left"
            Click="FtpClick"
            Content="误检测FTP" 
            Visibility="Hidden"/>
        

    </Grid>
</Window>
