<Window
    x:Class="SegmentationTestTool.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SegmentationTest"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="dundun"
    Title="列车测试工具v1.0.0"
    Width="1230"
    Height="550"
    mc:Ignorable="d">
    <Grid Margin="0" DataContext="{Binding ElementName=dundun}">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="150" />
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Column="8" Grid.RowSpan="3">
            <CheckBox
                x:Name="ImageGlassCheckBox"
                Margin="10"
                Content="ImageGlass"
                IsChecked="{Binding ImageGlass, Mode=TwoWay}"
                IsEnabled="False" />
            <CheckBox
                x:Name="OneTreeCheckBox"
                Margin="10"
                Content="OneTree"
                IsChecked="{Binding OneTree, Mode=TwoWay}"
                IsEnabled="False" />
            <CheckBox
                x:Name="VSCodeCheckBox"
                Margin="10"
                Content="VSCode"
                IsChecked="{Binding VsCode, Mode=TwoWay}"
                IsEnabled="False" />
            <Button
                x:Name="OpenTrainMonitorLogButton"
                Grid.Row="1"
                Width="150"
                Height="50"
                Margin="0,0,0,10"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="OpenTrainMonitorLogButton_OnClick"
                Content="TrainMontiorService.log"
                IsEnabled="True" />
            <Button
                x:Name="OpenImageHandlerLogButton"
                Grid.Row="1"
                Width="150"
                Height="50"
                Margin="0,0,0,10"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="OpenImageHandlerLogButton_OnClick"
                Content="ImageHandler.log"
                IsEnabled="True" />
        </StackPanel>
        

        
        <StackPanel
            Grid.Row="1"
            Grid.RowSpan="4"
            Grid.Column="0"
            Margin="0,0,0,0"
            Orientation="Vertical">
            <TextBlock
                x:Name="selectResult"
                Margin="0,0,0,10"
                FontSize="16"
                Text="{Binding SelectedItem, ElementName=stations, StringFormat='目前站点是{0}', TargetNullValue='未选择任何站点'}" />
            
            <ComboBox
                x:Name="stations"
                Margin="0,0,0,10"
                ItemsSource="{Binding StationList}"
                SelectedItem="{x:Null}"
                SelectionChanged="StationChanged" />
            <ComboBox
                x:Name="DatetimeComboBox"
                Margin="0,0,0,10"
                ItemStringFormat="yyyy-MM-dd"
                ItemsSource="{Binding DateList}"
                SelectedIndex="1"
                SelectionChanged="DatetimeChanged" />
            <ComboBox
                x:Name="TrainTypeComboBox"
                Margin="0,0,0,10"
                ItemsSource="{Binding TrainTypeList}"
                SelectedIndex="0"
                SelectionChanged="TrainTypeChanged" />
            <Button
                x:Name="gatherLongButton"
                Grid.Row="1"
                Width="150"
                Height="50"
                Margin="0,0,0,10"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="GatherLongClick"
                Content="汇总长图"
                IsEnabled="True" />
            <Button
                x:Name="gatherLocomotiveButton"
                Grid.Row="1"
                Width="150"
                Height="50"
                Margin="0,0,0,10"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="GatherLocomotiveClick"
                Content="汇总车头长图"
                IsEnabled="True" />
            <Button
                x:Name="GatherRearButton"
                Grid.Row="1"
                Width="150"
                Height="50"
                Margin="0,0,0,10"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="GatherRearClick"
                Content="汇总车尾长图"
                IsEnabled="True" />
            <ComboBox
                x:Name="gaps"
                Margin="0,0,0,10"
                ItemsSource="{Binding GapList}"
                SelectedIndex="0"
                SelectionChanged="GapChanged"
                IsEnabled="False"/>
            <Button
                x:Name="pickShortButton"
                Grid.Row="1"
                Width="150"
                Height="50"
                Margin="0,0,0,10"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="PickShortClick"
                Content="保留切错长图并获取短图"
                IsEnabled="False" />
            <Button
                x:Name="ftpUploadButton"
                Grid.Row="1"
                Width="150"
                Height="50"
                Margin="0,0,0,10"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="FtpUploadClick"
                Content="FTP上传软件错误短图"
                IsEnabled="True" />
            <Button
                x:Name="CleanButton"
                Grid.Row="1"
                Width="150"
                Height="50"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="Chartreuse"
                Click="CleanClick"
                Content="清理无关文件"
                IsEnabled="True" />
        </StackPanel>

        <TextBox
            x:Name="myConsole"
            Grid.RowSpan="5"
            
            Grid.Column="1"
            Grid.ColumnSpan="6"
            Width="Auto"
            AcceptsReturn="True"
            AcceptsTab="True"
            Background="White"
            FontFamily="Consolas"
            FontSize="14"
            Foreground="Black"
            HorizontalScrollBarVisibility="Auto"
            IsReadOnly="True"
            TextWrapping="NoWrap"
            VerticalScrollBarVisibility="Auto" 
            Margin="5"/>


    </Grid>

</Window>
